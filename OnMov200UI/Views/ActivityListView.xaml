<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300"
             x:Class="OnMov200UI.Views.ActivityListView">
  <DockPanel>
    <DockPanel HorizontalAlignment="Left" DockPanel.Dock="Top" >
       <Button DockPanel.Dock="Left" Command="{Binding $parent[Window].DataContext.SelectAll}">select all</Button> 
      <Button DockPanel.Dock="Right" Command="{Binding $parent[Window].DataContext.UnSelectAll}">deselect all</Button>
    </DockPanel>
    <!--<Button DockPanel.Dock="Top" Command="{Binding $parent[Window].DataContext.ToggleAll}">
      Select/Deselect all
    </Button>-->
    <Button DockPanel.Dock="Bottom" Command="{Binding $parent[Window].DataContext.ExtractActivities}" IsEnabled="{Binding HasSelectedActivities}">
      extract
    </Button>
    <ItemsControl Items="{Binding Activities}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <CheckBox Margin="4"
                    IsChecked="{Binding Checked}"
                    Content="{Binding Label}"             
                    />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </DockPanel>
</UserControl>